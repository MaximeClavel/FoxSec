<?xml version="1.0" encoding="UTF-8"?>
<!-- File: force-app/main/default/permissionsets/FoxSec_Admin.permissionset-meta.xml -->
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>FoxSec Admin Access</label>
    <description>Grants access to the FoxSec Security application, dashboard tab, and required Apex classes for security auditing. Note: ViewAllData is required to audit org-wide security settings. ModifyAllData is intentionally excluded for AppExchange compliance.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <license>Salesforce</license>

    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>FoxSecController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ConfigAuditEngine</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>UserAuditEngine</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>SharingAuditEngine</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>FoxSecResult</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <!-- Phase 2 Classes -->
    <classAccesses>
        <apexClass>HealthScoreCalculator</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ComplianceTemplateService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>AuditSnapshotService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>AuditExportService</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Custom Object Permissions - FoxSec_Audit_Snapshot__c -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>FoxSec_Audit_Snapshot__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>

    <!-- Field Permissions - FoxSec_Audit_Snapshot__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Snapshot_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Health_Score__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Grade__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Critical_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.High_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Medium_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Low_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Pass_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Total_Tests__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Org_Id__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Audit_Details__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Compliance_Template__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Compliance_Score__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>FoxSec_Audit_Snapshot__c.Run_By__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Tab Visibility -->
    <tabSettings>
        <tab>FoxSec_Dashboard</tab>
        <visibility>Visible</visibility>
    </tabSettings>

    <!-- Application Visibility -->
    <applicationVisibilities>
        <application>FoxSec</application>
        <visible>true</visible>
    </applicationVisibilities>

    <!-- System Permissions (Minimal for Security Review compliance) -->
    <!-- Note: ViewAllData is NOT included here per AppExchange best practices. -->
    <!-- Admins requiring full audit capabilities should have ViewAllData via their Profile. -->
    <userPermissions>
        <enabled>true</enabled>
        <name>ViewRoles</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>ViewSetup</name>
    </userPermissions>
</PermissionSet>
